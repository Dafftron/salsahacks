rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir acceso público a imágenes de perfil
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permitir acceso a videos para usuarios autenticados
    match /videos/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permitir acceso a imágenes de notas
    match /notes/{noteId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Permitir acceso a imágenes de eventos
    match /events/{eventId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Permitir acceso a imágenes de figuras
    match /figures/{figureId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Permitir acceso de lectura al directorio raíz para verificar disponibilidad
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
} 